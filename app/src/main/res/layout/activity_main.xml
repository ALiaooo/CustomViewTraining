<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_canvas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Canvas绘图"
                android:layout_alignParentTop="true"/>

            <com.aliao.cvtraining.view.CustomTitleView
                android:id="@+id/custom_title_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/material_blue_grey_800"
                android:padding="10dp"
                custom:titleText="1314"
                custom:titleTextColor="@android:color/holo_blue_dark"
                custom:titleTextSize="40sp"
                android:layout_toRightOf="@id/btn_canvas"

                />


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_below="@id/custom_title_view">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="自定义View显示一张图片:"/>

                <com.aliao.cvtraining.view.CustomImageView
                    android:layout_width="200dp"
                    android:layout_height="100dp"
                    android:padding="10dp"
                    custom:introText="马天宇"
                    custom:introTextSize="40sp"
                    custom:introTextColor="@android:color/holo_red_light"
                    custom:imageScaleType="fillXY"
                    custom:image="@mipmap/ic_launcher"
                    android:background="@android:color/holo_green_light"/>

            </LinearLayout>
            </RelativeLayout>


        </LinearLayout>


</ScrollView>
