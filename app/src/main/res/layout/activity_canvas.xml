<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <com.aliao.cvtraining.view.canvas.DrawCircle
            android:layout_width="100dp"
            android:layout_height="100dp"/>

        <com.aliao.cvtraining.view.canvas.DrawArc
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <com.aliao.cvtraining.view.canvas.DrawColor
            android:layout_width="50dp"
            android:layout_height="50dp" />

        <com.aliao.cvtraining.view.canvas.DrawLine
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <com.aliao.cvtraining.view.canvas.DrawOval
            android:layout_width="50dp"
            android:layout_height="wrap_content" />

        <com.aliao.cvtraining.view.canvas.DrawPostText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <com.aliao.cvtraining.view.canvas.DrawRect
            android:layout_width="80dp"
            android:layout_height="wrap_content" />

        <com.aliao.cvtraining.view.canvas.DrawRoundRect
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>