<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CustomTitleView">
        <attr name="numTextColor" format="color"/>
        <attr name="titleTextSize" format="dimension"/>
        <attr name="titleText" format="string"/>
    </declare-styleable>
    <declare-styleable name="CustomImageView">
        <attr name="image" format="reference"/>
        <attr name="imageScaleType">
            <enum name="fillXY" value="0"/>
            <enum name="center" value="1"/>
        </attr>
        <attr name="introTextColor" format="color"/>
        <attr name="introTextSize" format="dimension"/>
        <attr name="introText" format="string"/>

    </declare-styleable>

    <declare-styleable name="NumTitleView">
        <attr name="numText" format="string"/>
        <attr name="numtextColor" format="color"/>
        <attr name="numTextSize" format="dimension"/>
    </declare-styleable>

